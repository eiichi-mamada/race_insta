.new-post
  = form_with model: @posts , class: "form-post", local: true  do |f|
    %h1.form-post__title 投稿する 
    .form-post__mask
      = f.label :image, class: 'form-post__mask--image' do
        = f.file_field :image, class: 'hidden'
        = icon('fas', 'image fa-8x', class: 'icon')
    .form-post__areas
      = f.label "area(?):", class: "form-post__areas--label"
      = f.text_field :area_id, class: 'area_number', placeholder: '?'
    = f.label "Select cars:", class: "select_label"
    .form-post__cars
      = f.collection_check_boxes :car_ids, Car.all, :id, :car_number
    .form-post__input
      = f.text_area :text, class: 'input_text', placeholder: 'type a message'
      = f.submit 'Send', class: 'submit-btn'
